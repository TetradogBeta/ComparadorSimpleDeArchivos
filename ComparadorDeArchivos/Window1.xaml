<Window x:Class="ComparadorDeArchivos.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Comparador De Archivos" Height="300" Width="300"
>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Menu>
			<MenuItem x:Name="miLeft" Header="Left" Click="MiLeft_Click"/>
			<MenuItem x:Name="miRigth" Header="Right" Click="MiRigth_Click"/>
			<MenuItem x:Name="miCompara" Header="Compare" Click="MiCompara_Click"/>
		</Menu>
		<ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
			<StackPanel x:Name="stkDiferences" />
		</ScrollViewer>
	</Grid>
</Window>