<UserControl x:Class="ComparadorDeArchivos.Diferencia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="25"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBox x:Name="tbOffset" IsReadOnly="True" Background="AliceBlue"/>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<TextBox x:Name="tbLeft" IsReadOnly="True"/>
			</ScrollViewer>
			<ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
				<TextBox x:Name="tbRight" IsReadOnly="True"/>
			</ScrollViewer>
		</Grid>
	</Grid>
</UserControl>